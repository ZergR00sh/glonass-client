{
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "spread" : true,
        "restParams" : true,
        "experimentalObjectRestSpread": true
    },
    "globals": {
        "React": true
    },
    "extends": "google",
    "installedESLint": true,
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/react-in-jsx-scope": 2
    },
    "plugins": [
        "react"
    ]
}
